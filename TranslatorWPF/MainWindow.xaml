<Window x:Class="TranslatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranslatorWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Translator 0.1" Height="550" Width="450" Background="WhiteSmoke">
    <Grid HorizontalAlignment="Right" Width="444" >
        <TextBlock HorizontalAlignment="Left" FontSize="14" Height="35" Margin="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="424"><Run Text="1. Sprawdź w jakim języku jest wprowadzony tekst."/><LineBreak/><Run/></TextBlock>
        <TextBox Name="txtbCheckText" HorizontalAlignment="Left" Height="27" Margin="20,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="298"/>
        <Button Name="btnCheckText" Content="Sprawdź" HorizontalAlignment="Left" Margin="334,45,0,0" VerticalAlignment="Top" Width="91" Height="25" Background="Blue" Foreground="White" FontWeight="Bold"/>

        <TextBlock HorizontalAlignment="Left" Margin="20,89,0,0" TextWrapping="Wrap" Text="Język wprowadzonego tekstu to: " VerticalAlignment="Top" Height="19" Width="224"/>
        <GridSplitter HorizontalAlignment="Left" Height="398" Margin="217,-70,0,0" VerticalAlignment="Top" Width="7" RenderTransformOrigin="0.5,0.5" Background="LightBlue">
            <GridSplitter.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </GridSplitter.RenderTransform>
        </GridSplitter>
        <TextBlock HorizontalAlignment="Left" FontSize="14" Margin="20,144,0,0" TextWrapping="Wrap" Text="2. Translator" VerticalAlignment="Top" Height="23" Width="358"/>
    </Grid>
</Window>
